{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", 
        "moduleResolution": "bundler",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}